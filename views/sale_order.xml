<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sales_crm_interaction" model="ir.ui.view">
        <field name="name">sales.crm.interaction</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position='after'>
                <field name="partner_phone" required="1"/>
                <field name="partner_address" required="1"/>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position='before'>
                <field name="delivery_time" required="1"/>
                <field name="payment_condition"/>
            </xpath>

            <xpath expr="//field[@name='sale_order_template_id']" position='attributes'>
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position='attributes'>
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_invoice_id']" position='attributes'>
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_shipping_id']" position='attributes'>
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='date_order']" position='attributes'>
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='validity_date']/following-sibling::div/label" 
                   position='attributes'>
                <attribute name="invisible">1</attribute>
            </xpath>
            
            <xpath expr="//field[@name='validity_date']" 
                   position='attributes'>
                <attribute name="string">Date of Issue</attribute>
            </xpath>
            <xpath expr="//field[@name='validity_date']/following-sibling::div/label" 
                   position='attributes'>
                <attribute name="string">Date of Issue</attribute>
            </xpath>
            <xpath expr="//field[@name='validity_date']/following-sibling::div/following-sibling::div/label" 
                   position='attributes'>
                <attribute name="string">Date of Issue</attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" 
                   position='attributes'>
                <attribute name="string">Code</attribute>
            </xpath>
            
            <xpath expr="//field[@name='partner_id']" position='attributes'>
                <attribute name="context">
                    {'res_partner_search_mode': 'customer', 'show_address': 0, 'show_vat': 0}
                </attribute>
            </xpath>
        </field>
    </record>

    <record id="sales_crm_interaction_website_sale" model="ir.ui.view">
        <field name="name">sales.crm.interaction.website.sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="website_sale.sale_order_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position='attributes'>
                <attribute name="context">{
                    'display_website': True,
                    'res_partner_search_mode': 'customer',
                    'show_address': False,
                    'show_vat': False,
                }
                </attribute>
            </xpath>
        </field>
    </record>

</odoo>